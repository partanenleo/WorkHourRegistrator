<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialCalendarFullscreenTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>
        <item name="materialCalendarTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>
        <item name="materialTimePickerTheme">@style/Custom_TimePickerDialogTheme</item>
        <item name="alertDialogTheme">@style/Custom_DialogTheme</item>

        <item name="colorPrimary">@color/colorBackgroundEnd</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPurpleDark</item>
        <item name="colorOnSurface">@color/colorTransparentWhite3</item>
        <item name="android:textColorSecondary">@color/colorTransparentWhite3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarHeaderLayout">@style/Custom_MaterialCalendar.HeaderLayout</item>
        <item name="textAppearanceHeadline6">@style/Custom_MaterialCalendar.Text.Headline</item>
        <item name="textAppearanceBody2">@style/Custom_MaterialCalendar.Text.Body2</item>
        <item name="textAppearanceCaption">@style/Custom_MaterialCalendar.Text</item>

        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPurpleDark</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>
    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Custom_MaterialCalendar.HeaderLayout" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@drawable/background_nav_menu</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="Custom_MaterialCalendar.Text.Headline" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Custom_MaterialCalendar.Text.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTransparentWhite</item>
    </style>
    <style name="Custom_MaterialCalendar.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">cursive</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom_TimePickerDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="Theme.MyTheme.TimePicker" parent="android:Widget.Material.Light.TimePicker">

    </style>

    <style name="Custom_DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorBackground">#00000000</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorTransparentWhite3</item>
        <item name="colorOnSurface">@color/colorTransparentWhite3</item>
        <item name="android:textColor">@color/colorTransparentWhite3</item>
        <item name="android:textColorSecondary">@color/colorTransparentWhite</item>
        <item name="textColorAlertDialogListItem">@color/colorTransparentWhite3</item>
    </style>

</resources>
